# Database Configuration
DATABASE_URL=postgresql://fabric_user:fabric_pass@localhost:5432/fabric_quality
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# MinIO Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET_RAW=raw-captures
MINIO_BUCKET_PROCESSED=processed-artifacts
MINIO_BUCKET_MODELS=models
MINIO_BUCKET_EXPORTS=exports

# RabbitMQ / Celery
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672/
CELERY_RESULT_BACKEND=redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Settings
APP_NAME=Fabric Quality Analysis
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Model Configuration
MODEL_MANIFEST_URL=http://localhost:9000/models/models.json
DEFAULT_INFERENCE_MODE=client  # client or server
ENABLE_SERVER_INFERENCE=false

# Privacy & Retention
DEFAULT_IMAGE_RETENTION_DAYS=1
TRAINING_DATA_RETENTION_DAYS=365
ENABLE_METRICS_ONLY_MODE=true

# Observability
PROMETHEUS_PORT=9090
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Worker Configuration
WORKER_CONCURRENCY=4
WORKER_MAX_TASKS_PER_CHILD=100
WORKER_PREFETCH_MULTIPLIER=4

# Security
ENCRYPTION_KEY=your-32-byte-encryption-key-here
ENABLE_AUDIT_LOGS=true
MAX_UPLOAD_SIZE_MB=50

# Feature Flags
ENABLE_PARTNER_API=true
ENABLE_ADMIN_PORTAL=true
ENABLE_WEBHOOKS=false
